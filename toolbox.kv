#:import toolbox toolbox
<ToolBox@BoxLayout>:
	orientation:'vertical'
	id:tool_box
	tool_box:tool_box
	area:area
	rooms:rooms
	bedroom:bedroom
	generatebutton:generatebutton
	Label:
		text:'Area(sq.ft)'
		size_hint:None,None
		size:100,34
	Spinner:
		id:area
		text:'900'
		values:'1000','1500','2000','2500'
		size_hint:None,None
		size:90,34
		pos_hint:{'center_x':.5,'center_y':.5}
		disabled:True
	Label:
		text:'Rooms'
		size_hint:None,None
		size:100,34
	Spinner:
		id:rooms
		text:'3'
		values:'2','3','4','5','6','7'
		size_hint:None,None
		size:90,34
		pos_hint:{'center_x':.5,'center_y':.5}
		
	Label:
		text:'Bedroom'
		size_hint:None,None
		size:100,34
	Spinner:
		id:bedroom
		text:'2'
		values:'1','2'
		size_hint:None,None
		size:90,34
		pos_hint:{'center_x':.5,'center_y':.5}
		disabled:True
	Label:
		text:'Bathroom'
		size_hint:None,None
		size:100,34
	Spinner:
		id:bathroom
		text:'1'
		values:'1','2'
		size_hint:None,None
		size:90,34
		pos_hint:{'center_x':.5,'center_y':.5}
		disabled:True
	Label:
		text:'Hall'
		size_hint:None,None
		size:100,34
	Spinner:
		id:hall
		text:'1'
		values:'1','2'
		size_hint:None,None
		size:90,34
		pos_hint:{'center_x':.5,'center_y':.5}
		disabled:True
		
	Button:
		id:generatebutton
		area:area
		text:'Generate'
		size_hint:None,None
		size:90,44
		pos_hint:{'center_x':.5,'center_y':.5}
		background_color: (.83,.4,.82,1)
		on_press:self.parent.calculate(rooms.text,0)
	Label:
		text:''